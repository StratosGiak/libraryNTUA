<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.stratos.giak.libraryntua.EditUserController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <Text fx:id="titleText" text="Create new user"/>
    </HBox>
    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="passwordField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="emailField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="nameFirstField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="nameLastField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="IDField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1"
               GridPane.rowIndex="6"/>

    <Text fx:id="errorText" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

    <HBox alignment="BOTTOM_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="9">
        <Button onAction="#handleCancelButtonAction" text="Discard"/>
    </HBox>
    <HBox alignment="BOTTOM_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="10">
        <Button onAction="#handleSubmitButtonAction" text="Save"/>
    </HBox>

</GridPane>
