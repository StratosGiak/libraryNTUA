<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" dividerPositions="0.65"
           xmlns="http://javafx.com/javafx/17.0.2-ea"
           fx:controller="com.stratos.giak.libraryntua.BookDetailsController">
    <GridPane alignment="center" hgap="10" vgap="10">
        <padding>
            <Insets bottom="10" left="25" right="25" top="25"/>
        </padding>
        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
            <Text fx:id="titleText"/>
        </HBox>

        <Region prefHeight="15.0" GridPane.rowIndex="1"/>

        <Label text="Title:" GridPane.rowIndex="2"/>
        <Text fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Author:" GridPane.rowIndex="3"/>
        <Text fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Publisher:" GridPane.rowIndex="4"/>
        <Text fx:id="publisherField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="ISBN:" GridPane.rowIndex="5"/>
        <Text fx:id="ISBNField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Genre:" GridPane.rowIndex="6"/>
        <Text fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Year of publication:" GridPane.rowIndex="7"/>
        <Text fx:id="yearOfPublicationField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Label text="Rating:" GridPane.rowIndex="8"/>
        <Group GridPane.columnIndex="1" GridPane.rowIndex="8">
            <HBox fx:id="ratingsField" alignment="CENTER_LEFT" spacing="15"/>
        </Group>

        <Label text="Copies:" GridPane.rowIndex="9"/>
        <Text fx:id="copiesField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    </GridPane>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets bottom="10" left="25" right="25" top="25"/>
        </padding>
        <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
            <Text text="Request loan"/>
        </HBox>
        <Label text="Loan duration (days):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <HBox alignment="CENTER" spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Button fx:id="decrementLoanLengthButton" onAction="#handleDecrementLoanLengthAction"
                    style="-fx-background-radius: 5em; -fx-pref-width: 25px; -fx-pref-height: 25px;" text="â€“"/>
            <Text fx:id="loanLengthText" text="3"/>
            <Button fx:id="incrementLoanLengthButton" onAction="#handleIncrementLoanLengthAction"
                    style="-fx-background-radius: 5em; -fx-pref-width: 25px; -fx-pref-height: 25px;" text="+"/>
        </HBox>
        <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
            <Button fx:id="borrowButton" onAction="#handleBorrowButtonAction" text="Submit"/>
        </HBox>

        <Text fx:id="errorText" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2"
              GridPane.rowIndex="6"/>
    </GridPane>
    <stylesheets>
        <URL value="@login.css"/>
    </stylesheets>
</SplitPane>
