<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<TabPane xmlns:fx="http://javafx.com/fxml/1" fx:id="tabPane"
         xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.stratos.giak.libraryntua.MainView">
    <Tab text="Books" closable="false">
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding>
                <Insets bottom="10" left="25" right="25" top="25"/>
            </padding>
            <Label text="Search" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="searchTitleField" promptText="Title" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <TextField fx:id="searchAuthorField" promptText="Author" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <TextField fx:id="searchYearOfPublicationField" promptText="Year of publication" GridPane.rowIndex="3"
                       GridPane.columnIndex="1"/>
            <Button fx:id="addBookButton" text="Add Book" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TableView fx:id="tableViewBooks" GridPane.rowIndex="4" GridPane.hgrow="ALWAYS" GridPane.columnSpan="2">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="Title">
                        <cellValueFactory>
                            <PropertyValueFactory property="title"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Author">
                        <cellValueFactory>
                            <PropertyValueFactory property="author"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="ISBN">
                        <cellValueFactory>
                            <PropertyValueFactory property="ISBN"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Rating">
                        <cellValueFactory>
                            <PropertyValueFactory property="rating"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </GridPane>
    </Tab>
    <Tab text="Users" closable="false">
        <GridPane alignment="center" hgap="10" vgap="10">
            <padding>
                <Insets bottom="10" left="25" right="25" top="25"/>
            </padding>
            <Button fx:id="addUserButton" text="Add User" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <TableView fx:id="tableViewUsers" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" GridPane.columnSpan="1">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="Username">
                        <cellValueFactory>
                            <PropertyValueFactory property="username"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="First Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="nameFirst"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Last Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="nameLast"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="ID"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Email">
                        <cellValueFactory>
                            <PropertyValueFactory property="email"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </GridPane>
    </Tab>
</TabPane>