<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.stratos.giak.libraryntua.CreateBookController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <Text text="Create book"/>
    </HBox>
    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="titleField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="authorField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Publisher:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="publisherField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="ISBNField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="genreField" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Year of publication:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="yearOfPublicationField" maxWidth="-Infinity"
               prefWidth="50.0" onMouseClicked="#onFieldClicked" GridPane.columnIndex="1"
               GridPane.rowIndex="6"/>

    <Label text="Copies:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="copiesField" maxWidth="-Infinity" onMouseClicked="#onFieldClicked" prefWidth="50.0"
               GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Text fx:id="errorText" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

    <HBox alignment="BOTTOM_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="10">
        <Button onAction="#handleCreateButtonAction" text="Submit"/>
    </HBox>
    <HBox alignment="BOTTOM_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="11">
        <Button onAction="#handleCancelButtonAction" text="Cancel"/>
    </HBox>
</GridPane>
